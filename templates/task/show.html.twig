{# templates/task/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Detalhes da Tarefa{% endblock %}

{% block body %}
    <h1>Detalhes da Tarefa</h1>

    <table class="table table-bordered">
        <tbody>
        <tr>
            <th style="width: 150px;">Descrição</th>
            <td>{{ task.description }}</td>
        </tr>
        <tr>
            <th>Criado em</th>
            <td>{{ task.createdAt ? task.createdAt|date('d/m/Y H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Concluída</th>
            <td>{{ task.isDone ? 'Sim' : 'Não' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-3">
        <a href="{{ path('app_task_index') }}" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Voltar para a lista</a>
        <div>
            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a>
            {{ include('task/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
