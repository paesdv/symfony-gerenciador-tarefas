{# templates/task/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Lista de Tarefas{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Lista de Tarefas</h1>
        <a href="{{ path('app_task_new') }}" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Nova Tarefa</a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
        <tr>
            <th>Descrição</th>
            <th>Criado em</th>
            <th>Concluída</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.description }}</td>
                <td>{{ task.createdAt ? task.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ task.isDone ? 'Sim' : 'Não' }}</td>
                <td>
                    <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-sm btn-info" title="Ver"><i class="bi bi-eye"></i></a>
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-sm btn-warning" title="Editar"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Nenhuma tarefa encontrada.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
